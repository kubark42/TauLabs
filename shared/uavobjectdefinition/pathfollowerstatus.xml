<xml>
	<object name="PathFollowerStatus" singleinstance="true" settings="false">
		<description>Status of the current path mode  Can come from any @ref PathFollower module</description>

		<field name="Status" units="" type="enum" elements="1" options="Succeeding,Failing,Idle"/>
		<field name="FractionalProgress" units="" type="float" elements="1"/>
		<field name="TimeToCompletion" units="" type="float" elements="1"/>
		<field name="TrackingError" units="m" type="float" elements="1"/>

		<field name="StatusParameters" units="" type="float" elements="10"/>

		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="false" updatemode="manual" period="0"/>
		<telemetryflight acked="false" updatemode="periodic" period="1000"/>
		<logging updatemode="onchange" period="0"/>
	</object>
</xml>
